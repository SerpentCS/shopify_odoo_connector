<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_shopify_backend_form" model="ir.ui.view">
            <field name="name">shopify.backend.form</field>
            <field name="model">shopify.backend</field>
            <field name="arch" type="xml">
                <form string="Shopify Backend">
                    <header>
                      <button name="synchronize_metadata"
                        type="object"
                        class="oe_highlight"
                        string="Synchronize Metadata"/>
                    </header>
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                        <group name="shopify" string="Shopify Configuration">
                            <!-- <notebook>
                                <page string="API" name="api"> -->
                                	<group colspan="4" col="4">
                                	    <field name="shopify_url" placeholder="e.g. https://%s:%s@my-shop.myshopify.com/admin"
                                            colspan="4"/>
                                        <field name="api_key" colspan="2"/>
                                        <field name="password" password="1" colspan="2"/>
                                    </group>
                                <!-- </page> -->
                                <!-- <page string="HTTP Authentication" name="auth" colspan="4" col="4">
                                    <group colspan="4" col="4">
                                        <field name="use_auth_basic" colspan="4"/>
                                        <field name="auth_basic_username" colspan="2"
                                              attrs="{'invisible': [('use_auth_basic', '=', False)], 'required': [('use_auth_basic', '=', True)]}"/>
                                        <field name="auth_basic_password" colspan="2"
                                              password="1"
                                              attrs="{'invisible': [('use_auth_basic', '=', False)], 'required': [('use_auth_basic', '=', True)]}"/>
                                    </group>
                                </page> -->
                            <!-- </notebook> -->
                        </group>
                        <group name="main_configuration" string="Main Configuration">
                            <field name="warehouse_id"/>
                        </group>
                        <group name="main_configuration1">
                        <notebook>
                            <page name="import" string="Imports">
                                <p class="oe_grey oe_inline">
                                    By clicking on the buttons,
                                    you will initiate the synchronizations
                                    with Shopify.
                                    Note that the import or exports
                                    won't be done directly,
                                    they will create 'Jobs'
                                    executed as soon as possible.
                                </p>
                                <p class="oe_grey oe_inline">
                                    Once imported,
                                    some types of records,
                                    like the products or variant,
                                    need a manual review.
                                    You will find the list
                                    of the new records to review
                                    in the menu 'Connectors > Checkpoint'.
                                </p>
                                <group>
                                    <label string="Import all customer groups" class="oe_inline"/>
                                    <div>
                                        <button name="import_customer_groups"
                                            type="object"
                                            class="oe_highlight"
                                            string="Import in background"/>
                                    </div>
                                </group>
                                <group>
                                    <div>
                                        <label string="Import products categories since" class="oe_inline"/>
                                        <field name="import_categories_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_product_categories"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <div>
                                        <label string="Import products since" class="oe_inline"/>
                                        <field name="import_products_from_date"
                                            class="oe_inline"
                                            nolabel="1"/>
                                    </div>
                                    <button name="import_product_product"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <label string="Import sales orders from all store views" class="oe_inline"/>
                                    <button name="import_sale_orders"
                                        type="object"
                                        class="oe_highlight"
                                        string="Import in background"/>
                                </group>
                                <group>
                                    <label string="Update all the products stock quantities" class="oe_inline"/>
                                    <button name="update_product_stock_qty"
                                        type="object"
                                        class="oe_highlight"
                                        string="Update"/>
                                </group>

                            </page>

                            <page name="advanced_configuration" string="Advanced Configuration">
                                <group>
                                    <field name="default_lang_id" widget="selection"/>
                                    <field name="default_category_id"/>
                                    <field name="sale_prefix" placeholder="mag-" />
                                    <field name="product_stock_field_id" widget="selection"
                                        domain="[('model', 'in', ['product.product', 'product.template']), ('ttype', '=', 'float')]"/>
                                </group>
                            </page>

                            <!-- <page name="website" string="Websites">
                                <group string="Websites">
                                    <field name="website_ids" nolabel="1"/>
                                </group>
                            </page> -->

                        </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id = "shopify_connector_tree_view" model = "ir.ui.view">
			<field name = "name">shopify.connector.tree.view</field>
			<field name = "model">shopify.backend</field>
			<field name = "arch" type = "xml">
				<tree string = "Shopify Backend">
					<field name="name" />
					<field name="shopify_url"/>
				</tree>
			</field>
		</record>
		<record id  = "action_shopify_backend" model = "ir.actions.act_window">
			<field name = "name">Shopify</field>
			<field name = "res_model">shopify.backend</field>
			<field name = "view_type">form</field>
			<field name = "view_mode">tree,form</field>
		</record>
    </data>
</openerp>